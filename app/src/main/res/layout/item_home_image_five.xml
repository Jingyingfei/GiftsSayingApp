<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/home_image_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/home_image_column_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/home_image_category" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_image_avatar_url"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/home_image_nickname" />

        <TextView
            android:id="@+id/home_image_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/home_image_cover_image_url"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/home_image_posts_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>